{
  "manifest_version": 3,
  "name": "Telegram Bot Extractor",
  "version": "0.1.0",
  "description": "Extracts Telegram Bot links, tokens, and chat IDs from the current page.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}